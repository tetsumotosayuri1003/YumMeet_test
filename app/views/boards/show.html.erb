<section class="text-gray-600 body-font">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col justify-center items-center">
    <div class="container">
      <div class="max-w-screen-xl mx-auto p-5 sm:p-10 md:p-16">
        <div class="mb-5 flex justify-between text-sm">
        </div>
          <div class="container mx-auto pt-20">
            <div class="flex mb-3 justify-center">
              <div class="w-2/3">
                <h3 class="text-xl sm:text-4xl font-semibold inline-block hover:text-indigo-600 transition duration-500 ease-in-out inline-block mb-2"><%= @board.spot.name %></h3>
                  <article class="bg-white shadow-md rounded-lg overflow-hidden">
                    <div class="p-6">
                      <div class="flex">
                        <div class="w-1/4">
                          <%= image_tag @board.board_image_url, width: "400", height: "300", class: "block mx-auto" %>
                        </div>
                      </div>
                      <div class="w-3/4 pl-4 flex items-center justify-between">
                        <ul class="flex space-x-2">
                          <%= link_to "#" do %>
                            <li class="flex items-center">
                              <%= image_tag @board.user.avatar_url, class: 'rounded-full w-12 h-12 object-cover' %>
                              <span class="ml-2 mt-1"><%= @board.user.decorate.full_name %></span>
                            </li>
                          <% end %>
                        </ul>
                        <% if current_user.own?(@board) %>
                        <div class='flex justify-end'>
                          <%= link_to edit_board_path(@board), id: "button-edit-#{@board.id}" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                            </svg>
                          <% end %>
                          <%= link_to board_path(@board), id: "button-delete-#{@board.id}", data: { turbo_method: :delete, turbo_confirm: "削除しますか" } do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                          <% end %>
                        </div>
                        <% end %>
                      </div>
                      <div class="w-3/4 pl-4 flex justify-between items-center">
                        <div>
                          <%= @board.created_at.strftime('%Y/%m/%d %H:%M') %>
                        </div>
                        <fieldset class="rating_star">
                          <span class="text-yellow-400">
                            <%= display_rating_star(@board.rating_star.to_i) %>
                          </span>
                        </fieldset>
                      </div>
                      <div class="w-3/4 pl-4">
                        <p class="mt-4"><%= simple_format(@board.comment) %></p>
                      </div>
                      <div class="px-6 py-4 mb-auto">
                        <% if @board.tags.any? %>
                          <ul class="list-inline">
                            <% @board.tags.each do |tag| %>
                              <li><%= tag.name %></li>
                            <% end %>
                          </ul>
                        <% end %>
                      </div>
                    </div>
                  </article>
                </div>
              </div>
              <%= render 'comments/form', comment: @comment, board: @board %>
              <div class="flex justify-center">
                <div class="w-2/3">
                  <table class="table-auto w-full">
                    <tbody id="table-comment">
                      <%= render @comments %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
