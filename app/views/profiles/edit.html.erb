<div class="container">
<div class="container mx-auto flex px-5 py-24 md:flex-row flex-col justify-center items-center">
  <div class="mx-auto max-w-md">
    <h1 class="text-xl font-bold text-center">プロフィール編集</h1>
    <%= form_with model: @user, url: profile_path, method: :put, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="mb-4">
        <div class="pt-5 pb-3">
          <%= f.label :avatar, class: 'block mb-1 pr-4' %>
        </div>
        <%= f.file_field :avatar, id: 'image_select_btn', class: 'w-full rounded border border-gray-200 p-2', accept: 'image/*' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class='mt-3 mb-3 flex justify-left'>
        <%= image_tag @user.avatar.url, class: 'rounded-full', id: 'preview', size: '100x100' %>
      </div>
      <%= f.submit "プロフィール更新", class: "flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>
</div>
</div>
